<div *ngIf="notifications$ | async as notifications">
  <div *ngFor="let notif of notifications">
    <div [ngClass]="{'bg-gray-200': !notif.read, 'bg-white': notif.read}" class="p-2 mb-2 rounded">
      <p><strong>{{ notif.senderUsername }}</strong>: {{ notif.message }}</p>
      <p class="text-sm text-gray-500">{{ notif.timestamp | date:'short' }}</p>
      <button (click)="markNotificationAsRead(notif.id)">Mark as read</button>
    </div>
  </div>
</div>
